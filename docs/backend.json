{
  "entities": {
    "Personnel": {
      "title": "Personnel",
      "type": "object",
      "description": "Represents a member of the personnel.",
      "properties": {
        "matricule": {
          "type": "string",
          "description": "Matricule of the personnel."
        },
        "firstName": {
          "type": "string",
          "description": "First name of the personnel."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the personnel."
        },
        "rank": {
          "type": "string",
          "description": "Rank of the personnel."
        },
        "contact": {
          "type": "string",
          "description": "Contact information of the personnel."
        },
        "address": {
          "type": "string",
          "description": "Address of the personnel."
        },
        "email": {
          "type": "string",
          "description": "Email address of the personnel.",
          "format": "email"
        }
      },
      "required": [
        "matricule",
        "firstName",
        "lastName",
        "rank",
        "contact",
        "address",
        "email"
      ]
    },
    "AttendanceRecord": {
      "title": "AttendanceRecord",
      "type": "object",
      "description": "Represents a single attendance record for a personnel member.",
      "properties": {
        "personnelId": {
          "type": "string",
          "description": "Reference to Personnel."
        },
        "date": {
          "type": "string",
          "description": "Date of the attendance record.",
          "format": "date"
        },
        "status": {
          "type": "string",
          "description": "Attendance status: present, absent, mission, permission.",
          "enum": ["present", "absent", "mission", "permission"]
        },
        "permissionDuration": {
          "type": "object",
          "description": "Duration of the permission, if applicable.",
          "properties": {
            "start": {
              "type": "string",
              "format": "date"
            },
            "end": {
              "type": "string",
              "format": "date"
            }
          }
        },
        "missionId": {
          "type": "string",
          "description": "Reference to Mission, if status is 'mission'."
        }
      },
      "required": [
        "personnelId",
        "date",
        "status"
      ]
    },
    "DailyStatus": {
      "title": "DailyStatus",
      "type": "object",
      "description": "Represents the status of a specific day, for example, if attendance has been validated.",
      "properties": {
        "validated": {
          "type": "boolean",
          "description": "Whether the attendance for this day has been validated."
        },
        "validatedAt": {
          "type": "string",
          "description": "The timestamp when the validation occurred.",
          "format": "date-time"
        }
      },
      "required": ["validated", "validatedAt"]
    },
    "Mission": {
      "title": "Mission",
      "type": "object",
      "description": "Represents a mission with assigned personnel.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the mission."
        },
        "description": {
          "type": "string",
          "description": "Description of the mission."
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "personnelIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of personnel IDs assigned to the mission."
        }
      },
      "required": ["name", "date", "personnelIds"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/personnel/{personnelId}": {
      "schema": {
        "$ref": "#/entities/Personnel"
      },
      "description": "Stores information about each personnel member."
    },
    "/attendance/{attendanceId}": {
      "schema": {
        "$ref": "#/entities/AttendanceRecord"
      },
      "description": "Stores attendance records for each personnel member. The ID is a composite of personnelId and date."
    },
    "/dailyStatus/{day}": {
      "schema": {
        "$ref": "#/entities/DailyStatus"
      },
      "description": "Stores the validation status for a given day (YYYY-MM-DD)."
    },
    "/missions/{missionId}": {
      "schema": {
        "$ref": "#/entities/Mission"
      },
      "description": "Stores mission details and assigned personnel."
    }
  }
}
