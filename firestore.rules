/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a security model where all data access is open.
 * Data Structure:
 * - /personnel/{personnelId}: Stores information about each personnel member.
 * - /attendance/{attendanceId}: Stores attendance records for each personnel member. The ID is a composite of personnelId and date.
 * Key Security Decisions:
 * - All reads are public (get, list).
 * - All writes are allowed (create, update, delete).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * @description Allows anyone to read and write personnel data.
     * @path /personnel/{personnelId}
     * @allow (get) Any user can retrieve personnel data.
     * @deny (create) No condition under which creation is denied.
     * @principle Allows public read access for all personnel documents.
     */
    match /personnel/{personnelId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows anyone to read and write attendance data.
     * @path /attendance/{attendanceId}
     * @allow (get) Any user can retrieve attendance data.
     * @deny (create) No condition under which creation is denied.
     * @principle Allows public read access for all attendance documents.
     */
    match /attendance/{attendanceId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}